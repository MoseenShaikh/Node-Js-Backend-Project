<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employees List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">

  <!-- Header with Departments & Add Employee Buttons -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h2">Employees</h1>
    <div class="d-flex gap-2">
      <a href="/departments" class="btn btn-secondary">Departments</a>
      <a href="/employees/create" class="btn btn-primary">Add Employee</a>
    </div>
  </div>

  <!-- Row 1: Search Bar -->
  <form method="GET" action="/employees" class="row g-3 mb-3">
    <div class="col-md-6">
      <input type="text" name="search" class="form-control" placeholder="Search Name" value="<%= search || '' %>">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Search</button>
    </div>
  </form>

  <!-- Row 2: Filters & Page Size -->
  <form method="GET" action="/employees" class="row g-3 mb-4">
    <!-- Keep previous search value in hidden input -->
    <input type="hidden" name="search" value="<%= search || '' %>">

    <div class="col-md-3">
      <select name="department" class="form-select">
        <option value="">All Departments</option>
        <% departments.forEach(d => { %>
          <option value="<%= d._id %>" <%= (department == d._id) ? "selected" : "" %>><%= d.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-3">
      <input type="text" name="jobTitle" class="form-control" placeholder="Job Title" value="<%= jobTitle || '' %>">
    </div>
    <div class="col-md-2">
      <select name="pageSize" class="form-select">
        <option value="5" <%= pageSize == 5 ? "selected" : "" %>>5</option>
        <option value="10" <%= pageSize == 10 ? "selected" : "" %>>10</option>
        <option value="25" <%= pageSize == 25 ? "selected" : "" %>>25</option>
        <option value="50" <%= pageSize == 50 ? "selected" : "" %>>50</option>
      </select>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
  </form>

  <!-- Employees Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Job Title</th>
          <th>Department</th>
          <th>Supervisor</th>
          <th>Country</th>
          <th>State</th>
          <th>City</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (employees && employees.length > 0) { %>
          <% employees.forEach((emp, index) => { %>
            <tr class="<%= index % 2 === 0 ? 'table-light' : '' %>">
              <td><%= index + 1 + ((currentPage-1) * pageSize) %></td>
              <td><%= emp.name %></td>
              <td><%= emp.email %></td>
              <td><%= emp.jobTitle %></td>
              <td><%= emp.department ? emp.department.name : '-' %></td>
              <td><%= emp.supervisor ? emp.supervisor.name : '-' %></td>
              <td><%= emp.country || '-' %></td>
              <td><%= emp.state || '-' %></td>
              <td><%= emp.city || '-' %></td>
              <td class="d-flex gap-2">
                <a href="/employees/<%= emp._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                <form action="/employees/<%= emp._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?')" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="10" class="text-center">No employees found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if(totalPages && totalPages > 1) { %>
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center flex-wrap">
        <% if(currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage-1 %>&pageSize=<%= pageSize %>&search=<%= search || '' %>&department=<%= department || '' %>&jobTitle=<%= jobTitle || '' %>">Previous</a>
          </li>
        <% } %>

        <% for(let i=1; i<=totalPages; i++) { %>
          <li class="page-item <%= currentPage==i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&pageSize=<%= pageSize %>&search=<%= search || '' %>&department=<%= department || '' %>&jobTitle=<%= jobTitle || '' %>"><%= i %></a>
          </li>
        <% } %>

        <% if(currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage+1 %>&pageSize=<%= pageSize %>&search=<%= search || '' %>&department=<%= department || '' %>&jobTitle=<%= jobTitle || '' %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
